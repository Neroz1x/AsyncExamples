<Window x:Class="SyncContextExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncContextExamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel>
        <Label Name="Label">Some text</Label>
        <Button HorizontalAlignment="Left" Width="120" Click="OnDeadlock">Click me</Button>
        <Button HorizontalAlignment="Left" Width="120" Click="OnDispatcherInvokeAsync">Dispatcher Invoke</Button>
        <Button HorizontalAlignment="Left" Width="120" Click="OnContextNullAsync">Context null</Button>
        <Button HorizontalAlignment="Left" Width="120" Click="OnCustomContextAsync">Custom SyncContext</Button>
        <Button HorizontalAlignment="Left" Width="120" Click="OnFixedCustomContextAsync">Custom Fixed Context</Button>
        <Button HorizontalAlignment="Left" Width="120" Click="OnWorksAsync">Works</Button>
    </StackPanel>
</Window>
